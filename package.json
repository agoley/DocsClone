{
  "name": "documents-app",
  "version": "1.0.0",
  "description": "Document management API with real-time updates",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "migrate": "node server/db/migrations.js",
    "client-install": "cd client && npm install",
    "client-build": "cd client && npm run build",
    "server-install": "cd server && npm install",
    "install-all": "npm run server-install && npm run client-install",
    "build": "npm run client-build",
    "heroku-postbuild": "npm run server-install && npm run client-install && npm run client-build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=14"
  }
}
